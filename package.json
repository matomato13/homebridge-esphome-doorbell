{
  "name": "homebridge-esphome-doorbell",
  "version": "1.2.0",
  "description": "Integrates a ESPHome doorbell into Homebridge",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/matomato13/homebridge-esphome-doorbell.git"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.3.0"
  },
  "main": "dist/index.js",
  "scripts": {
